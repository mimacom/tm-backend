{
    "name": "tm-backend",
    "scripts": {
        "start": "ts-node src/index.ts",
        "run-dev": "node --inspect=0.0.0.0 -r ts-node/register src/index.ts",
        "dev": "dotenv -- nodemon -e ts,graphql -x ts-node src/index.ts",
        "debug": "dotenv -- nodemon -e ts,graphql -x ts-node --inspect src/index.ts",
        "playground": "graphql playground",
        "dev-all": "npm-run-all --parallel dev playground",
        "schema": "graphql get-schema -p database",
        "types": "graphql codegen",
        "regen-schema": "run-s schema types",
        "prisma": "prisma"
    },
    "dependencies": {
        "bcryptjs": "2.4.3",
        "graphql-shield": "^2.2.6",
        "graphql-yoga": "1.14.10",
        "jsonwebtoken": "8.3.0",
        "ldapauth-fork-plus": "^4.0.1",
        "prisma-binding": "2.1.0"
    },
    "devDependencies": {
        "@types/bcryptjs": "2.4.1",
        "dotenv-cli": "1.4.0",
        "graphql-cli": "^2.16.4",
        "nodemon": "1.17.5",
        "npm-run-all": "4.1.3",
        "prisma": "^1.11.1",
        "rimraf": "2.6.2",
        "ts-node": "6.2.0",
        "typescript": "2.9.2"
    }
}
